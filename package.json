{
  "name": "polkadot-snap",
  "version": "0.0.1",
  "description": "Metamask snap to interact with Polkadot dapps.",
  "main": "build/index.js",
  "scripts": {
    "lint": "yarn run lint:types && yarn run lint:style",
    "lint:types": "tsc --noEmit --pretty",
    "lint:style": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "start": "yarn run build && yarn run serve",
    "prebuild": "rm -rf build && rm -rf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "yarn run build:types && yarn run build:js && yarn run build:snap",
    "build:types": "tsc",
    "build:js": "babel src node_modules --out-dir build --extensions \".ts,.tsx,.js\" --source-maps inline",
    "build:snap": "snap build",
    "watch": "concurrently  --raw --kill-others \"yarn run watch:tsc\" \"yarn run watch:snap\" \"yarn run serve\"",
    "watch:tsc": "yarn run build:tsc --watch",
    "watch:snap": "snap watch -s build/index.js",
    "serve": "snap serve",
    "test": "yarn run test:unit",
    "test:unit": "mocha -r ts-node/register test/unit/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NodeFactoryIo/metamask-snap-polkadot.git"
  },
  "keywords": [
    "polkadot",
    "metamask",
    "snap",
    "plugin",
    "dapp",
    "wallet"
  ],
  "author": "NodeFactory <info@nodefactory.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NodeFactoryIo/metamask-snap-polkadot/issues"
  },
  "homepage": "https://github.com/NodeFactoryIo/metamask-snap-polkadot#readme",
  "web3Wallet": {
    "bundle": {
      "local": "dist/bundle.js",
      "url": "http://localhost:8081/dist/bundle.js"
    },
    "initialPermissions": {
      "alert": {},
      "getPluginState": {},
      "updatePluginState": {}
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/chai": "^4.2.10",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "chai": "^4.2.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "snaps-cli": "^0.4.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@polkadot/api": "^1.7.1",
    "tweetnacl": "^1.0.3"
  }
}
